<div class="card-product m-3">
    <!-- Carrousel -->
  <div id="product-carousel-<%=i%>" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% product.photos.each_with_index do |photo, i| %>
        <div class="carousel-item <%= "active" if i == 0 %>">
          <%= cl_image_tag photo.key, height: 150, width: 200, crop: :fill, class: "d-block" %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#product-carousel-<%=i%>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#product-carousel-<%=i%>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="card-product-infos flex-grow-1">
    <h2>
      <%= product.title %>
    </h2>
    <p>
      <%= product.description %>
      <%= "#{product.price} â‚¬ / day " %>
      <%= "by #{User.find(product.user_id).first_name}" %>
    </p>
  </div>
  <div class="card-delete mr-5">
    <% if user_signed_in? && current_user.id == product.user_id %>
      <%= link_to  "<i class='fas fa-edit'></i>".html_safe, edit_product_path(product), class: "icone", remote: true%>
      <%= link_to "<i class='fas fa-trash'></i>".html_safe,
            product_path(product),
            method: :delete,
            data: { confirm: "All past and futures booking for this product will be destroyed, are you sure?" }, class: "icone", remote: true%>
    <% end %>
  </div>
</div>
