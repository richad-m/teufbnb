<div class="container">

  <div class="card-category row d-flex justify-content-between px-5 border ", style="">
    <div>
    <h2><%= @product.title %></h2>
    </div>

    <div class="share-like-delete text-right">
      <p> share & like </p>
      <% if user_signed_in? && current_user.id == @product.user_id %>
        <%= link_to  "<i class='fas fa-edit'></i>".html_safe, edit_product_path(@product), class: "icone" %>
        <%= link_to "<i class='fas fa-trash'></i>".html_safe,
              product_path(@product),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "icone" %>
      <% end %>
    </div>
  </div>

  <div class="card-show d-flex">
    <div id="product-carousel" class="card carousel slide py-3 col-8" data-ride="carousel">
      <div class="carousel-inner">
        <% @product.photos.each_with_index do |photo, i| %>
          <div class="carousel-item <%= "active" if i == 0 %>">
            <%= cl_image_tag photo.key, height: 400, width: 800, crop: :fill, class: "d-block w-100", style: "object-fit:cover;" %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#product-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#product-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


    <div class="py-3 col-4 card align-items-center d-flex justify-content-around"  id="test" style="">
      <div class="row">
        <%= simple_form_for [@product, @booking] do |f| %>
            <%= f.input :start_date, input_html: { class: "form-show"},
            label: 'Start date', label_html: { class: "label-show"},
            as: :date,
            html5: true%>
            <%= f.input :end_date, input_html: { class: "form-show"},
            label: "End date", label_html: {class: "label-show"},
            as: :date,
            html5: true%>
            <%= f.submit "Book now", class: "btn btn-primary flex-grow" %>
            <%#= link_to "Book now", products_path(booking: "true"), class: "btn btn-light"%>
        <% end %>
      </div>
    </div>
  </div>

<br>

  <div class="cards">
    <div class="card-category card-centre" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8cGFydHl8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60)">
      <div class="d-flex flex-column">
        <div class="p-2"><h4><%= @product.description %></h4></div>
        <div class="p-2"><h5>Price :<%= @product.price %></h5></div>
    </div>
    </div>
  </div>


</div>


